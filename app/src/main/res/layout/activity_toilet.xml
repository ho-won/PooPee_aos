<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_content_background"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <kr.ho1.poopee.common.view.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_content_background" />

    <View
        android:id="@+id/line_01"
        style="@style/line_main"
        android:layout_below="@+id/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@id/line_01"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_name"
            style="@style/base_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@color/main_content_background"
            android:hint="@string/home_text_05"
            android:maxHeight="80dp"
            android:inputType="textMultiLine"
            android:minHeight="32dp"
            android:paddingBottom="4dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp" />

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btn_join"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:text="@string/send"
                android:textColor="@color/text_white"
                android:textSize="14sp" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>