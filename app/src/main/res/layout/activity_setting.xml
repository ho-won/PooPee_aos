<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_content_background"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <kr.co.ho1.poopee.common.view.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_content_background" />

    <View
        android:id="@+id/line_01"
        style="@style/line_main"
        android:layout_below="@+id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ad_view"
        android:layout_below="@id/line_01"
        android:animateLayoutChanges="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_login"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_login"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/contentDescription"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/menu_setting_01"
                    android:textColor="#292d34"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_setting_02"
                    android:textColor="#a0a4aa"
                    android:textSize="11sp"
                    android:visibility="gone"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/contentDescription"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_next" />

            </LinearLayout>

            <View
                style="@style/line_main"
                android:layout_height="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/menu_setting_03"
                    android:textColor="#292d34"
                    android:textSize="13sp" />

                <Switch
                    android:id="@+id/switch_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textOff=""
                    android:textOn=""
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />

            </LinearLayout>

            <View style="@style/line_main" />

            <LinearLayout
                android:id="@+id/layout_terms_01"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/menu_setting_04"
                    android:textColor="#292d34"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/contentDescription"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_next" />

            </LinearLayout>

            <View style="@style/line_main" />

            <LinearLayout
                android:id="@+id/layout_terms_02"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/menu_setting_05"
                    android:textColor="#292d34"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/contentDescription"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_next" />

            </LinearLayout>

            <View style="@style/line_main" />

            <LinearLayout
                android:id="@+id/layout_terms_03"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/menu_setting_06"
                    android:textColor="#292d34"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/contentDescription"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_next" />

            </LinearLayout>

            <View style="@style/line_main" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EFEFEF"
        android:minHeight="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>