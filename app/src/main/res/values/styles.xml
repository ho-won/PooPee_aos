<resources>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
    </style>

    <style name="AppThemePrimary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/login_background</item>
        <item name="colorPrimaryDark">@color/login_background</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@color/popup_transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="line_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_line_height</item>
        <item name="android:background">@color/main_line</item>
    </style>

    <style name="base_edt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/border_square_main</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#292d34</item>
        <item name="android:textColorHint">#d0d2d5</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_primary</item>
    </style>

    <style name="base_btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_main_height</item>
        <item name="android:paddingStart">@dimen/btn_main_padding</item>
        <item name="android:paddingEnd">@dimen/btn_main_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/btn_main_text_sp</item>
    </style>

    <style name="nav_btn_menu" parent="@style/base_btn">
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="cb_gender">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cb_gender</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
